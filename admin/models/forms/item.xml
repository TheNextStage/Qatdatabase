<?xml version="1.0" encoding="utf-8" ?>
<form addrulepath="/administrator/components/com_qatdatabase/models/rules">
	<fieldset>
		<field
			name="id"
			type="hidden"
		/>
		
		<field
			id="title"
			name="title"
			type="text"
			label="JGLOBAL_TITLE"
			description="JFIELD_TITLE_DESC"
			class="input-xxlarge input-large-text"
			size="60"
			required="true"
		/>
		
		<field
			id="alias"
			name="alias"
			type="text"
			label="JFIELD_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC"
			hint="JFIELD_ALIAS_PLACEHOLDER"
			class="inputbox"
			size="45"
		/>
		
		<field
			name="content"
			type="textarea"
			label="COM_QATDATABASE_ITEM_CONTENT"
			description="COM_QATDATABASE_FIELD_CONTENT_DESC"
			class="input-xxlarge"
			rows="17"
			required="true"
		/>
		
		<field
			name="catid"
			type="category"
			extension="com_qatdatabase"
			class="inputbox"
			default=""
			label="COM_QATDATABASE_ITEM_CATEGORY"
			description="COM_QATDATABASE_ITEM_CATID_DESC"
			required="true"
		/>
		
		<field
			name="published"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="chzn-color-state"
			filter="intval"
			size="1"
			default="1"
		>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		
		<field
			name="publish_up"
			type="calendar"
			label="COM_QATDATABASE_ITEM_PUBLISH_UP"
			description="COM_QATDATABASE_ITEM_PUBLISH_UP"
			format="%Y-%m-%d %H:%M:%S"
			size="22"
		/>
		
		<field
			name="publish_down"
			type="calendar"
			label="COM_QATDATABASE_ITEM_PUBLISH_DOWN"
			description="COM_QATDATABASE_ITEM_PUBLISH_DOWN"
			format="%Y-%m-%d %H:%M:%S"
			size="22"
		/>
		
		<field
			name="created"
			type="calendar"
			label="COM_QATDATABASE_ITEM_CREATION_DATE"
			description="COM_QATDATABASE_ITEM_CREATION_DATE"
			format="%Y-%m-%d %H:%M:%S"
			size="22"
		/>
	</fieldset>
</form>
